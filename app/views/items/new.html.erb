<!-- app/views/items/new.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Item</title>
    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application' %>
    <link href="/path/to/your/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900 font-sans leading-normal tracking-normal">
    <div class="container mx-auto mt-5 px-4">
        <form action="/items" accept-charset="UTF-8" method="post" aria-labelledby="form-title" class="bg-white p-6 rounded shadow-md">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

            <h1 id="form-title" class="mb-4 text-2xl font-bold">Create Item</h1>

            <div class="mb-4">
                <label for="item_name" class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" id="item_name" name="item[name]" class="form-input mt-1 block w-full p-2 border rounded" required aria-required="true">
            </div>

            <div class="mb-4">
                <label for="item_description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea id="item_description" name="item[description]" class="form-textarea mt-1 block w-full p-2 border rounded"></textarea>
            </div>

            <div class="mb-4">
                <label for="item_category_type" class="block text-sm font-medium text-gray-700">Category</label>
                <select id="item_category_type" name="item[category_type]" class="form-select mt-1 block w-full p-2 border rounded" required aria-required="true">
                    <option value="">Select Category</option>
                    <option value="1">Plant</option>
                    <option value="2">Container</option>
                    <option value="3">Essential</option>
                </select>
            </div>

            <%= render 'items/plant_fields', item: @item %>
            <%= render 'items/container_fields', item: @item %>
            <%= render 'items/essential_fields', item: @item %>
            <%= render 'items/auction_fields', item: @item %>

            <div>
                <input type="submit" value="Create Item" class="btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">
            </div>
        </form>
    </div>
</body>
</html>
