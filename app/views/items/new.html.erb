<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Form</title>
    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application' %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <form action="/items" accept-charset="UTF-8" method="post" aria-labelledby="form-title">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

            <h1 id="form-title" class="mb-4">Create Item</h1>

            <div class="form-group">
                <label for="item_name">Name</label>
                <input type="text" id="item_name" name="item[name]" class="form-control" required aria-required="true">
            </div>

            <div class="form-group">
                <label for="item_description">Description</label>
                <textarea id="item_description" name="item[description]" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="item_category_type">Category</label>
                <select id="item_category_type" name="item[category_type]" class="form-control" required aria-required="true">
                    <option value="">Select Category</option>
                    <option value="1">Plant</option>
                    <option value="2">Container</option>
                    <option value="3">Essential</option>
                </select>
            </div>

            <!-- Plant Attributes -->
            <fieldset id="plant_fields" class="item_fields" style="display: none;" aria-hidden="true">
                <legend>Plant Details</legend>

                <div class="form-group">
                    <label for="item_species">Species</label>
                    <select id="item_species" name="item[species]" class="form-control">
                        <option value="">Select Species</option>
                        <option value="1">Azalea</option>
                        <option value="2">Boxwood</option>
                        <option value="3">Cypress</option>
                        <option value="4">Elm</option>
                        <option value="5">Ficus</option>
                        <option value="6">Gingko</option>
                        <option value="7">Juniper</option>
                        <option value="8">Maple</option>
                        <option value="9">Oak</option>
                        <option value="10">Olive</option>
                        <option value="11">Pine</option>
                        <option value="12">Schefflera</option>
                        <option value="13">Tea</option>
                        <option value="14">Other</option>
                    </select>
                    <input type="text" id="item_species_other" name="item[species_other]" class="form-control mt-2" style="display: none;" placeholder="Other Species" aria-hidden="true">
                </div>

                <div class="form-group">
                    <label for="item_style">Style</label>
                    <select id="item_style" name="item[style]" class="form-control">
                        <option value="">Select Style</option>
                        <option value="1">Formal Upright</option>
                        <option value="2">Informal Upright</option>
                        <option value="3">Cascade</option>
                        <option value="4">Forest</option>
                        <option value="5">Clump</option>
                        <option value="6">Broom</option>
                        <option value="7">Other</option>
                    </select>
                    <input type="text" id="item_style_other" name="item[style_other]" class="form-control mt-2" style="display: none;" placeholder="Other Style" aria-hidden="true">
                </div>

                <div class="form-group">
                    <label for="item_stage">Stage</label>
                    <select id="item_stage" name="item[stage]" class="form-control">
                        <option value="">Select Stage</option>
                        <option value="1">Pre-Bonsai</option>
                        <option value="2">Development</option>
                        <option value="3">Refinement</option>
                        <option value="4">Specimen</option>
                        <option value="5">Seeds/Seedlings</option>
                    </select>
                </div>
            </fieldset>

            <!-- Container Attributes -->
            <fieldset id="container_fields" class="item_fields" style="display: none;" aria-hidden="true">
                <legend>Container Details</legend>

                <div class="form-group">
                    <label for="item_material_container">Material</label>
                    <select id="item_material_container" name="item[material]" class="form-control">
                        <option value="">Select Material</option>
                        <option value="1">Commercial</option>
                        <option value="2">Handmade</option>
                        <option value="3">Disposable</option>
                        <option value="4">Other</option>
                    </select>
                    <input type="text" id="item_material_container_other" name="item[material_other]" class="form-control mt-2" style="display: none;" placeholder="Other Material" aria-hidden="true">
                </div>

                <div class="form-group">
                    <label for="item_shape_container">Shape</label>
                    <select id="item_shape_container" name="item[shape]" class="form-control">
                        <option value="">Select Shape</option>
                        <option value="1">Lotus</option>
                        <option value="2">Nanban</option>
                        <option value="3">Round</option>
                        <option value="4">Oval</option>
                        <option value="5">Rectangle</option>
                        <option value="6">Bag</option>
                        <option value="7">Other</option>
                    </select>
                    <input type="text" id="item_shape_container_other" name="item[shape_other]" class="form-control mt-2" style="display: none;" placeholder="Other Shape" aria-hidden="true">
                </div>

                <div class="form-group">
                    <label for="item_color_container">Color</label>
                    <select id="item_color_container" name="item[color]" class="form-control">
                        <option value="">Select Color</option>
                        <option value="1">Black</option>
                        <option value="2">White</option>
                        <option value="3">Natural</option>
                        <option value="4">Blue</option>
                        <option value="5">Green</option>
                        <option value="6">Other</option>
                    </select>
                    <input type="text" id="item_color_container_other" name="item[color_other]" class="form-control mt-2" style="display: none;" placeholder="Other Color" aria-hidden="true">
                </div>

                <div class="form-group">
                    <label for="item_size_container">Size</label>
                    <select id="item_size_container" name="item[size]" class="form-control">
                        <option value="">Select Size</option>
                        <option value="1">X-Small</option>
                        <option value="2">Small</option>
                        <option value="3">Medium</option>
                        <option value="4">Large</option>
                        <option value="5">Extra Large</option>
                        <option value="6">XX Large</option>
                        <option value="7">Other</option>
                    </select>
                    <input type="text" id="item_size_container_other" name="item[size_other]" class="form-control mt-2" style="display: none;" placeholder="Other Size" aria-hidden="true">
                </div>

                <div class="form-group">
                    <label for="item_origin_container">Origin</label>
                    <select id="item_origin_container" name="item[origin]" class="form-control">
                        <option value="">Select Origin</option>
                        <option value="1">US</option>
                        <option value="2">Japan</option>
                        <option value="3">China</option>
                        <option value="4">Other</option>
                    </select>
                    <input type="text" id="item_origin_container_other" name="item[origin_other]" class="form-control mt-2" style="display: none;" placeholder="Other Origin" aria-hidden="true">
                </div>
            </fieldset>

            <!-- Essential Attributes -->
            <fieldset id="essential_fields" class="item_fields" style="display: none;" aria-hidden="true">
                <legend>Essential Details</legend>

                <div class="form-group">
                    <label for="item_essential_type">Essential Type</label>
                    <select id="item_essential_type" name="item[essential_type]" class="form-control">
                        <option value="1">Soil</option>
                        <option value="2">Supplements</option>
                        <option value="3">Decorations</option>
                        <option value="4">Wire</option>
                        <option value="5">Books</option>
                        <option value="6">Stands</option>
                        <option value="7">Tools</option>
                        <option value="8">Other</option>
                    </select>
                    <input type="text" id="item_essential_other" name="item[essential_other]" class="form-control mt-2" style="display: none;" placeholder="Other Essential Type" aria-hidden="true">
                </div>

                <div id="wire_fields" class="form-group" style="display: none;">
                    <label for="item_wire_type">Wire Type</label>
                    <select id="item_wire_type" name="item[wire_type]" class="form-control">
                        <option value="">Select Wire Type</option>
                        <option value="1">Copper</option>
                        <option value="2">Aluminum</option>
                        <option value="3">Other</option>
                    </select>
                    <input type="text" id="item_wire_other" name="item[wire_other]" class="form-control mt-2" style="display: none;" placeholder="Other Wire Type" aria-hidden="true">
                </div>

                <fieldset id="tools_fields" class="form-group" style="display: none;">
                    <legend>Tool Details</legend>
                    <div class="form-group">
                        <label for="item_tool_type">Tool Type</label>
                        <select id="item_tool_type" name="item[tool_type]" class="form-control">
                            <option value="">Select Tool</option>
                            <option value="1">Shears</option>
                            <option value="2">Pliers</option>
                            <option value="3">Branch Splitters</option>
                            <option value="4">Cutters</option>
                            <option value="5">Rakes</option>
                            <option value="6">Other</option>
                        </select>
                        <input type="text" id="item_tool_other" name="item[tool_other]" class="form-control mt-2" style="display: none;" placeholder="Other Tool Type" aria-hidden="true">
                    </div>

                    <div class="form-group">
                        <label for="item_brand">Brand</label>
                        <input type="text" id="item_brand" name="item[brand]" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="item_condition">Condition</label>
                        <input type="text" id="item_condition" name="item[condition]" class="form-control">
                    </div>
                </fieldset>
            </fieldset>

            <!-- Auction Attributes -->
            <h2 class="mt-4">Auction Details</h2>

            <div class="form-group">
                <label for="auction_starting_price">Starting Price</label>
                <input type="number" id="auction_starting_price" name="item[auction_attributes][starting_price]" class="form-control" step="0.01">
            </div>

            <div class="form-group">
                <label for="auction_bid_increment">Minimum Bid Increment</label>
                <input type="number" id="auction_bid_increment" name="item[auction_attributes][bid_increment]" class="form-control" step="0.01">
            </div>

            <div class="form-group">
                <label for="auction_start_date">Start Date</label>
                <input type="datetime-local" id="auction_start_date" name="item[auction_attributes][start_date]" class="form-control">
            </div>

            <div class="form-group">
                <label for="auction_end_date">End Date</label>
                <input type="datetime-local" id="auction_end_date" name="item[auction_attributes][end_date]" class="form-control">
            </div>

            <div class="form-group">
                <label for="auction_buy_it_now_price">Buy It Now Price</label>
                <input type="number" id="auction_buy_it_now_price" name="item[auction_attributes][buy_it_now_price]" class="form-control" step="0.01">
            </div>

            <div class="form-group">
                <input type="submit" value="Create Item" class="btn btn-primary">
            </div>
        </form>
    </div>
</body>
</html>
