<div data-category-visibility-target="container">
  <!-- Material Field -->
  <%= form.label :material, 'Material', for: 'item_container_material', class: 'block text-sm font-medium text-gray-700' %>
  <%= form.select :material, 
    options_for_select(Item.materials.keys.map { |k| [k.humanize, k] }, @item.material), 
    { include_blank: true }, 
    { id: "item_container_material", required: false, data: { action: "change->category-visibility#updateOtherField" } } 
  %>
  <div data-category-visibility-target="material_other" class="hidden">
    <%= form.text_field :material_other, 
      id: "item_container_material_other", 
      class: 'form-input mt-1 block w-full p-2 border rounded', 
