<!-- app/views/items/_auction_fields.html.erb -->
<h2 class="mt-4 text-2xl font-semibold">Auction Details</h2>

<div class="mb-4">
  <label for="auction_starting_price" class="block text-sm font-medium text-gray-700">Starting Price</label>
  <input type="number" id="auction_starting_price" name="item[auction_attributes][starting_price]" value="<%= item&.auction&.starting_price %>" class="form-input mt-1 block w-full p-2 border rounded" step="0.01">
</div>

<div class="mb-4">
  <label for="auction_bid_increment" class="block text-sm font-medium text-gray-700">Minimum Bid Increment</label>
  <input type="number" id="auction_bid_increment" name="item[auction_attributes][bid_increment]" value="<%= item&.auction&.bid_increment %>" class="form-input mt-1 block w-full p-2 border rounded" step="0.01">
</div>

<div class="mb-4">
  <label for="auction_start_date" class="block text-sm font-medium text-gray-700">Start Date</label>
  <input type="datetime-local" id="auction_start_date" name="item[auction_attributes][start_date]" value="<%= item&.auction&.start_date&.strftime('%Y-%m-%dT%H:%M:%S') %>" class="form-input mt-1 block w-full p-2 border rounded">
</div>

<div class="mb-4">
  <label for="auction_end_date" class="block text-sm font-medium text-gray-700">End Date</label>
  <input type="datetime-local" id="auction_end_date" name="item[auction_attributes][end_date]" value="<%= item&.auction&.end_date&.strftime('%Y-%m-%dT%H:%M:%S') %>" class="form-input mt-1 block w-full p-2 border rounded">
</div>

<div class="mb-4">
  <label for="auction_buy_it_now_price" class="block text-sm font-medium text-gray-700">Buy It Now Price</label>
  <input type="number" id="auction_buy_it_now_price" name="item[auction_attributes][buy_it_now_price]" value="<%= item&.auction&.buy_it_now_price %>" class="form-input mt-1 block w-full p-2 border rounded" step="0.01">
</div>
