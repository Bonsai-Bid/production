<!-- app/views/auctions/bidding_history.html.erb -->
<div class="container mx-auto mt-3 px-4">
  <h1 class="text-2xl font-bold">Bidding History</h1>
  <ul class="list-disc pl-5 mb-4">
    <% @bids.each do |bid| %>
      <li><%= bid.bidder.email %>: <%= number_to_currency(bid.bid_amount) %> - <%= bid.created_at.strftime('%Y-%m-%d %H:%M:%S') %></li>
    <% end %>
  </ul>
  <%= link_to 'Back to Auction', auction_path(@auction), class: "btn bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-700" %>
</div>
