<!-- app/views/devise/registrations/edit.html.erb -->
<div class="container mx-auto mt-8 px-4">
  <h2 class="text-2xl font-bold mb-4">Edit <%= resource.name.to_s.humanize %>'s Information</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-4") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 255, class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-sm text-gray-600">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <!-- Phone -->
    <div class="mb-4">
      <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
      <%= f.phone_field :phone, autocomplete: "phone", maxlength: 15, class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <!-- Password -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <em class="text-xs text-gray-500">(leave blank if you don't want to change it)</em>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input mt-1 block w-full p-2 border rounded" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <!-- Password Confirmation -->
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <!-- Current Password -->
    <div class="mb-4">
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
      <em class="text-xs text-gray-500">(we need your current password to confirm your changes)</em>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <%= render 'devise/registrations/address_fields', f: f %>

    <!-- Time Zone -->
    <%= f.label :time_zone, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :time_zone, ActiveSupport::TimeZone.all.select { |tz| ["Pacific Time (US & Canada)", "Mountain Time (US & Canada)", "Central Time (US & Canada)", "Eastern Time (US & Canada)"].include?(tz.name) }.map { |tz| [tz.name, tz.name] }, {}, class: "form-input mt-1 block w-full p-2 border rounded" %>

    <div class="actions">
      <%= f.submit "Update", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= button_to "Cancel my account", registration_path(resource_name), class: "btn bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
  </div>

  <div class="mt-4">
    <%= link_to "Back", :back, class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
</div>
