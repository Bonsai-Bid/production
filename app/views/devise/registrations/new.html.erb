<h2 class="text-2xl font-bold mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-4") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- Password -->
  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- Password Confirmation -->
  <div class="mb-4">
    <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- Street -->
  <div class="mb-4">
    <%= f.label :street, "Street", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :street, autocomplete: "street-address", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- City -->
  <div class="mb-4">
    <%= f.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :city, autocomplete: "address-level2", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- State -->
  <div class="mb-4">
    <%= f.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :state, autocomplete: "address-level1", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- Zip -->
  <div class="mb-4">
    <%= f.label :zip, "Zip", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :zip, autocomplete: "postal-code", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <!-- Nested fields for UserProfile -->
  <%= f.fields_for :user_profile_attributes do |profile_form| %>
    <div class="mb-4">
      <%= profile_form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
      <%= profile_form.text_field :name, autocomplete: "name", class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= profile_form.label :phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
      <%= profile_form.text_field :phone, autocomplete: "phone", class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= profile_form.label :time_zone, "Time Zone", class: "block text-sm font-medium text-gray-700" %>
      <%= profile_form.select :time_zone, ActiveSupport::TimeZone.all.map { |tz| [tz.name, tz.name] }, {}, class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign Up", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
