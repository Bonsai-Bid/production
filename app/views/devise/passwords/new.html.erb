<!-- app/views/devise/passwords/new.html.erb -->
<div class="container mx-auto mt-8 px-4">
  <h2 class="text-2xl font-bold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Send me reset password instructions", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
