<h1 class="my-4 text-xl font-bold">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-3 max-w-md mx-auto") do |f| %>
  <div class="form-group mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <div class="form-group mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input mt-1 block w-full p-2 border rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "form-checkbox h-4 w-4 text-blue-600 transition duration-150 ease-in-out" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 w-full" %>
  </div>
<% end %>

<div class="mt-3 text-center">
  <%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:text-blue-700" %> |
  <%= link_to "Forgot your password?", new_user_password_path, class: "text-blue-500 hover:text-blue-700" %>
</div>

