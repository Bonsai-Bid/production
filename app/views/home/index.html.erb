<h1 class="my-4 text-xl font-bold">Search</h1>

<%= form_tag(search_path, method: :get, class: "flex items-center") do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "form-input mr-2 p-2 border rounded" %>
  <%= submit_tag "Search", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700 mt-3" %>
<% else %>
  <form action="<%= user_session_path %>" method="post" class="mt-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group mb-4">
      <label for="user_email" class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" name="user[email]" id="user_email" class="form-input mt-1 block w-full p-2 border rounded">
    </div>
    <div class="form-group mb-4">
      <label for="user_password" class="block text-sm font-medium text-gray-700">Password</label>
      <input type="password" name="user[password]" id="user_password" class="form-input mt-1 block w-full p-2 border rounded">
    </div>
    <div class="form-group">
      <input type="submit" value="Log in" class="btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">
    </div>
  </form>
  <div class="mt-3">
    <%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:text-blue-700" %> |
    <%= link_to "Forgot your password?", new_user_password_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
<% end %>
