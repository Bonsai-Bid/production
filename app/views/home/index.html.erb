<h1 class="my-4 text-xl font-bold">Search</h1>

<%= form_tag(search_path, method: :get, class: "flex items-center mb-4") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search...", class: "form-input mr-2 p-2 border rounded w-full max-w-xs" %>
  <%= submit_tag "Search", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>

<%= render 'shared/newest_auctions' %>

<% if user_signed_in? %>
  <%= render 'shared/your_watchlist', user: @user, watchlists: @watchlists %>
  <%= render 'shared/your_auctions', user: @user %>
<% else %>

  <div class="mt-3 text-center">
    <%= link_to 'Login', new_user_session_path, class: 'text-blue-500 hover:text-blue-700' %> |
    <%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:text-blue-700" %> |
    <%= link_to "Forgot your password?", new_user_password_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
<% end %>
