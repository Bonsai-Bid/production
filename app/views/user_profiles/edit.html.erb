<!-- app/views/user_profiles/edit.html.erb -->
<div class="container mx-auto mt-8 px-4">
  <h1 class="text-2xl font-bold mb-4">Edit Profile</h1>

  <%= form_with(model: @user_profile, local: true) do |form| %>
    <% if @user_profile.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <h2 class="font-bold mb-2"><%= pluralize(@user_profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @user_profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :about_me, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :about_me, class: "form-textarea mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :profile_picture, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :profile_picture, class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :banner_image, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :banner_image, class: "form-input mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= form.label :seller_policy, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :seller_policy, class: "form-textarea mt-1 block w-full p-2 border rounded" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Save", class: "btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
